# Application Configuration
APP_NAME=tentackl
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres_master_pass@postgres:5432/aios_tentackl
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://redis:6379/5
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/5
CELERY_RESULT_BACKEND=redis://redis:6379/5

# Agent Configuration
AGENT_DEFAULT_TIMEOUT=300
AGENT_MAX_RETRIES=3
AGENT_HEARTBEAT_INTERVAL=30

# Security
SECRET_KEY=your-secret-key-here-change-in-production
API_KEY_HEADER=X-API-Key

# External APIs (Optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
OPENROUTER_API_KEY=

# OpenRouter Configuration (Optional)
SITE_URL=http://localhost:8000
SITE_NAME=Tentackl Multi-Agent System

# MCP Configuration
MCP_ENABLED=true
MCP_REGISTRY_PATH=/app/config/mcp_registry.json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# InkPass authentication service
INKPASS_URL=http://inkpass:8000
INKPASS_JWT_SECRET=your-inkpass-jwt-secret

# Mimic notification/integration service
MIMIC_URL=http://mimic:8000
MIMIC_TIMEOUT=10.0
MIMIC_MAX_RETRIES=3

# Frontend URL (for OAuth post-redirect)
TENTACKL_FRONTEND_URL=http://localhost:3000

# Google OAuth Configuration (Optional - for Google integrations)
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/api/v1/oauth/google/callback
